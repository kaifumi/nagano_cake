<h2>注文一覧表示</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <% @orders.each do |order| %>
                <% i = 0 %>
                <td><%= l order.created_at %></td>
                <td><%= link_to order.customer.full_name, admin_order_path(order) %></td>
                <td><% order.order_details.each do |order_detail| %>
                    <% i += order_detail.amount %><%end%>
                    <%= i %>
                </td>
                <td><%= order.transaction_status %></td>
                <%end%>
            </tr>
        </tbody>
    </table>

<%= paginate @orders %>

