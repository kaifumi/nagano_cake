<div class="container"> 
<div class="row">

<h2>注文一覧表示</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <%= @orders.each do |order| %>
            <tr>
                <td><%= order.created_at %></td>
                <td><%= order.customers.full_name%></td>
                <td><%= order.order_details.amount %></td>
                <td><%= order.transaction_status %></td>
            </tr>
        <%end%>
    </tbody>
</table>
<%= paginate @orders %>

</div>
</div>