<div class = "container">
    <div class = "row">
        <h1>ジャンル編集画面</h1>
                <%= form_for @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
                    <%= f.label "ジャンル" %>
                    <label><%= f.text_field :type %></label>
                    <label><%= f.radio_button :sell_activated, 0 %>有効</label>
                    <label><%= f.radio_button :sell_activated, 1 %>無効</label>
                    <%= f.submit "変更を保存",class:'btn btn-primary' %>
                <% end %>
            </div>
    </div>
</div>
    
