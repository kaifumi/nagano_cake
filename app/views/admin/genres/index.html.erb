<div class = "container">
    <div class = "row">
        <h1>ジャンル追加・一覧画面</h1>
        <%= form_for @genre,url:admin_genres_path do |f| %>
        <%= render 'shared/error_messages',model: @genre %>
            <%= f.label "ジャンル" %>
                <label><%= f.text_field :type %></label>
                <label><%= f.radio_button :sell_activated, true %>有効</label>
                <label><%= f.radio_button :sell_activated, false %>無効</label>
                <%= f.submit "追加", class:'btn btn-primary' %>
            <% end %>


            <table class = "table table-sm">
                <thead>
                    <tr>
                        <th>ジャンル</th>
                        <th>状態</th>
                        <th></th>
                    </tr>
                </thead>
                    <tbody>
                    <% @genres.each do |genre| %>
                        <td><%= genre.type %></td>
                        <td><%= genre.sell_activated ? "有効" : "無効" %></td>
                        <td><%= link_to "編集する", edit_admin_genre_path(genre.id),class:'btn btn-primary' %></td>
                    </tbody>
                    <% end %>
            </table>
    </div>
</div>


