
<!-- 商品一覧ページ -->
<div class="container">
<div class="row">

		<h2 class="product_index_head">商品一覧画面</h2>


		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.id %></td>
					<td><%= link_to product.name, admin_product_path(product.id) %></td>
					<td><%= product.price %></td>
					<td><%= product.genre %></td>
					<td><%= product.sell_activated ? "有効" : "無効" %> %></td>
				</tr>
			<%end%>

			<%= paginate @products %>

			</tbody>
		</table>

</div>
</div>