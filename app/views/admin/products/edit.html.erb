<%= render 'layouts/admin_header' %>
<!-- 商品編集ページ -->
<div class="container">
<div class="row">

	<!-- エラー文 -->
	<%# if @user.errors.any? %>
		<div id="error_explanation">
		    <!-- <h2><%#= @user.errors.count %>errors prohibited this book from being saved:</h2> -->
	    	<%# @user.errors.full_messages.each do |msg| %>
	    	<li><%#= msg %></li>
	    	<%# end %>
	    </div>
    <%# end %>

	<h2 class="col-xs-offset-1 edit_product_head">商品 編集画面</h2>

	<%= form_for(@product) do |f| %>
	<div class="col-xs-3 col-xs-offset-1">
    	<%= attachment_image_tag product, :image, :fill, 40, 40, format: 'jpeg' %>
    </div>

    <div class="col-xs-8">
		<!-- 商品名登録 -->
			<div class="form-group">
				<lavel>商品名</lavel><br>
				<%= f.text_field :name, class: "col-xs-6" %><br>
			</div>

		<!-- 商品説明登録 -->
			<div class="form-group">
				<lavel>商品説明 </lavel><br>
				<%= f.text_area :content, class: "col-xs-6" %><br><br>
			</div>

		<!-- ジャンル選択 -->
			<div class="form-group">
				<lavel>ジャンル </lavel><br>
				<%#= f.collection_select :genre_id, Genre.all, :id, :value属性の項目とは？, class: "col-xs-6" %>
				<!-- collection_selectのformfor内での使い方 => f.coection_select (:オブジェクト名),:プロパティ,:オブジェクトの配列,:value属性の項目,text --><br>
			</div>

		<!-- 税抜価格 -->
			<div class="form-group">
				<lavel>税抜価格 </lavel><br>
				<%= f.text_field :price, class: "col-xs-6" %><p> 円</p><br>
			</div>

		<!-- 販売ステータス -->
			<div class="form-group">
				<lavel>販売ステータス </lavel><br>
				<%#= f.select :selling_status [["販売中", "true"], ["売切れ", "false"]], class: "col-xs-6" %>
			</div>

		<!-- 投稿ボタン -->
			<%= f.submit "投稿", class:"btn btn-primary"  %>
	</div>

	<% end %>


</div>
</div>

