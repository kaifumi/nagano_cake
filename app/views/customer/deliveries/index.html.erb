
<div class="col-xs-3"></div>

<%= render "shared/error_messages",model: @delivery %>

<div class="col-xs-3">
<h2>配送先登録/一覧</h2>

<%= form_for(@delivery,url:customer_deliveries_path) do |f| %>

<table class="table table-bordered">
	<tr>
		<th width="100">
		<%= f.label :郵便番号 %>
		</th>

		<th>
		<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
		</th>
	</tr>
	<tr>
		<th width="100">
		<%= f.label :住所 %>
		</th>

		<th>
		<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
		</th>
	</tr>
	<tr>
		<th width="100">
		<%= f.label :宛名 %>
		</th>

		<th>
		<%= f.text_field :receiver, autofocus: true, autocomplete: "receiver" %>
		</th>
	</tr>
</table>

<div class="actions">
  <%= f.submit "登録する" %>
</div>
<% end %>

 <%# if @customer.id == current_customer.id %>
 <%# @customers.each do |customer| %>
 <%# customer.first_name %>
 <%# end %>
 <%# end %>


<%# if @customer == current_customer.id %>

<!-- ↓カラムにデータがあれば表示してくれる -->
<%# if @deliveries.present? %>

	<% @deliveries.each do |delivery| %>
	<table class="table table-bordered">
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>

		<tr>
			<th><%= delivery.postal_code %></th>
			<th><%= delivery.address %></th>
			<th><%= delivery.receiver %></th>
			<th>
				<%= link_to "編集する", edit_customer_delivery_path(delivery) %>

				<%= link_to "削除する", customer_delivery_path(delivery), method: :delete %>
			</th>
		</tr>
	</table>
	<% end %>
<%# end %>
</div>

