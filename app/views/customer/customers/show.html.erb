<%#  カスタマーそれぞれのマイページ %>
<div class="container">
    <p>マイページ</p><br>
    <%# 横並びするためにブロック化 %>
    <div class="customer_info">
        <p>登録情報</p>
        <div class="button_wrapper">
            <%= link_to "編集する", edit_customer_customer_path, class:"btn btn-primary" %>
        </div>
        <button class="btn btn-primary">パスワードを変更する</button>
    </div>

    <%# テーブル内容の書き方合ってるか不安 %>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>氏名</th>
                <td>"#{current_customer.last_name} "+"#{current_customer.first_name}"</td>
            </tr>
            <tr>
                <th>カナ</th>
                <td>"#{current_customer.kana_last_name} "+"#{current_customer.kana_first_name}"</td>
            </tr>
            <tr>
                <th>郵便番号</th>
                <td>current_customer.postal_code</td>
            </tr>
            <tr>
                <th>住所</th>
                <td>current_customer.address</td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td>current_customer.telephone_number</td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td>current_customer.email</td>
            </tr>
        </tbody>
    </table>

    <div class="delivery_address">
        <p>配送先　　</p>
        <%= link_to "一覧を見る", customer_deliveries_path, class:"btn btn-primary" %>
    </div>
    <div class="order_history">
        <p>注文履歴　</p>
        <%= link_to "一覧を見る", customer_orders_path, class:"btn btn-primary" %>
    </div>
</div>
