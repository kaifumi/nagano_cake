<div id="slideshow" >
    <div id="theTarget" data-turbolinks="false">
        <div class="image1"><a href="/customer/products/1"></a></div>
        <div class="image2"><a href="/customer/products/2"></a></div>
        <div class="image3"><a href="/customer/products/3"></a></div>
        <div class="image4"><a href="/customer/products/4"></a></div>
        <div class="image5"><a href="/customer/products/5"></a></div>
    </div>
</div>

<div class="">
<!-- サイドバーの表示 -->
<div class="col-xs-3">
    <%= render 'layouts/sidebar', genres: @genres %>
</div>

<!-- 商品一覧の表示 -->
<div class="col-xs-8">
    <h2 class="red-border px-3">すべての商品</h2>

    <% @products.each do |product| %>
        <div class="col-xs-3">
            <%= link_to customer_product_path(product) do %>
                <%= attachment_image_tag product, :image, size: "170x170", fallback: "noimage.jpg", size: "170x170" %><br>
                <%= product.name %>
            <%end%>
            <p>金額：<%= product.price %>円</p>
        </div>
    <% end %>
    <div class="pager">
        <%= paginate @products %>
    </div>
</div>
</div>
