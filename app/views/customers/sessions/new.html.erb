<div class="container">
  <div class="row">
    <div class="col-xs-9">


<h4>会員の方はこちらからログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <table>
    <tr>
      <th width="180">
      <%= f.label :メールアドレス %>
      </th>
    
      <th>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </th>
    </tr>
  </table>

  <p></p>

  <table>
    <tr>
      <th width="180">
      <%= f.label :パスワード %>
      </th>

      <th>
      <%= f.password_field :password, autocomplete: "current-password" %>
      </th>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  </div>
<% end %>

<h4>登録がお済みでない方</h4>
<p></p>
<p>
  <%= link_to "こちら", new_customer_registration_path %>
  から新規登録を行ってください。</p>

